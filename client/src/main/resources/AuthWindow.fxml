<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.geekbrains.chat_client.ui.ClientController">
    <ImageView fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@poggers_200x200.png" />
        </image>
        <VBox.margin>
            <Insets bottom="15.0" top="40.0" />
        </VBox.margin>
    </ImageView>
    <Label fx:id="authWindowHeader" contentDisplay="CENTER" text="POGGERS chat" textAlignment="CENTER" textFill="#10b510" VBox.vgrow="NEVER">
        <font>
            <Font name="Arial" size="26.0" />
        </font>
        <padding>
            <Insets bottom="20.0" />
        </padding>
    </Label>
    <GridPane vgap="7.0">
        <columnConstraints>
            <ColumnConstraints fillWidth="false" maxWidth="87.0" minWidth="75.0" prefWidth="87.0" />
            <ColumnConstraints maxWidth="178.0" minWidth="166.0" prefWidth="166.0" />
        </columnConstraints>
        <padding>
            <Insets left="10.0" />
        </padding>
        <TextField fx:id="authWindowLoginField" alignment="BOTTOM_LEFT" onKeyReleased="#loginByEnter" GridPane.columnIndex="1">
            <font>
                <Font name="Arial" size="14.0" />
            </font>
        </TextField>
        <PasswordField fx:id="authWindowPasswordField" onKeyReleased="#loginByEnter" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <font>
                <Font name="Arial" size="14.0" />
            </font>
        </PasswordField>
        <Label onMouseClicked="#focusToLoginField" prefWidth="80.0" text="Login">
            <font>
                <Font name="Arial" size="16.0" />
            </font>
            <GridPane.margin>
                <Insets left="5.0" />
            </GridPane.margin>
        </Label>
        <Label onMouseClicked="#focusToPasswordField" prefWidth="80.0" text="Password" GridPane.rowIndex="1">
            <font>
                <Font name="Arial" size="16.0" />
            </font>
            <GridPane.margin>
                <Insets left="5.0" />
            </GridPane.margin>
        </Label>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>
    <Label fx:id="authWindowStateLabel" alignment="TOP_LEFT" prefHeight="40.0" textAlignment="CENTER" textFill="#ee3933" wrapText="true">
        <font>
            <Font name="Arial" size="13.0" />
        </font>
        <padding>
            <Insets left="10.0" right="10.0" top="5.0" />
        </padding>
    </Label>
    <HBox alignment="CENTER" spacing="20.0">
        <children>
            <Button fx:id="authWindowLoginButton" onAction="#sendAuthRequest" prefWidth="100.0" text="Sign in">
                <font>
                    <Font name="Arial" size="14.0" />
                </font>
            </Button>
            <Button fx:id="authWindowExitButton" onAction="#closeProgram" prefWidth="100.0" text="Exit">
                <font>
                    <Font name="Arial" size="14.0" />
                </font>
            </Button>
        </children>
      <VBox.margin>
         <Insets top="5.0" />
      </VBox.margin>
    </HBox>
   <Button mnemonicParsing="false" prefWidth="135.0" text="Sign up">
      <font>
         <Font name="Arial" size="14.0" />
      </font>
      <VBox.margin>
         <Insets top="25.0" />
      </VBox.margin>
   </Button>
   <Button mnemonicParsing="false" prefWidth="135.0" text="Change password">
      <font>
         <Font name="Arial" size="14.0" />
      </font>
      <VBox.margin>
         <Insets top="15.0" />
      </VBox.margin>
   </Button>
</VBox>
